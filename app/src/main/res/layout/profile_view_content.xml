<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/profile_width"
            android:layout_height="@dimen/profile_height"
            android:layout_marginStart="@dimen/margin_normal"
            android:src="@drawable/ic_person"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/RoundedCornerImage"
            android:scaleType="centerCrop"
            android:background="@color/white"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/name_and_role_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/name"
                    style="@style/Material.Body1.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Developer name" />

                <TextView
                    android:id="@+id/role"
                    style="@style/Material.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profile_role_text_size"
                    tools:text="Developer role" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/engineer_stats"
            android:layout_width="0dp"
            android:layout_height="@dimen/engineer_stats_height"
            android:orientation="horizontal"
            style="@style/RoundedCornerImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/profile_image"
            app:layout_constraintTop_toBottomOf="@+id/name_and_role_view"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/rounded_corners"
            app:layout_constraintWidth_default="spread"
            android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="@dimen/padding_small">

                        <TextView
                            android:id="@+id/stat_years_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/engineer_stats_heading_text_size"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:text="@string/engineer_stats_header_years"/>

                        <TextView
                            android:id="@+id/stat_years_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/engineer_stats_heading_text_size"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            tools:text="8"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="8dp">
                        <TextView
                            android:id="@+id/stat_coffees_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="@dimen/engineer_stats_heading_text_size"
                            android:textColor="@color/black"
                            android:text="@string/engineer_stats_header_coffees"/>

                        <TextView
                            android:id="@+id/stat_coffees_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/engineer_stats_heading_text_size"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            tools:text="500"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="8dp">
                        <TextView
                            android:id="@+id/stat_bugs_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            android:text="@string/engineer_stats_header_bugs"/>

                        <TextView
                            android:id="@+id/stat_bugs_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            tools:text="1000"/>
                </LinearLayout>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>